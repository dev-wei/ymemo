                    return (
                        gr.update(),  # meeting_list (no change)
                        gr.HTML(f"""
                            <script>
                                setTimeout(function() {{
                                    showSaveStatus('{message}', true);
                                }}, 100);
                            </script>
                        """)
                    )
                    
            except Exception as e:
                logger.error(f"Error saving meeting: {e}")
                return (
